.search {
    width: 80%;
}

input {
    background-color: white;
}

.search_arr {
    border: 1px solid #d0d0d0;
    border-radius: 10rpx;
    margin-left: 20rpx;
    background-color: white;
}

.search_arr input {
    margin-left: 60rpx;
    height: 60rpx;
    border-radius: 5px;
}

.sousuo {
    width: 15%;
    line-height: 200%;
    margin-left: 8rpx;
    text-align: center;
    border: 1px solid #d0d0d0;
    border-radius: 10rpx;
    background-color: white;
}

.page_row {
    display: flex;
    flex-direction: row;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.searchcion {
    margin: 10rpx 10rpx 10rpx 10rpx;
    position: absolute;
    left: 25rpx;
    z-index: 2;
    width: 20px;
    height: 20px;
    text-align: center;
}

.top {
    font-size: 30rpx;
}

.listmsg {
    position: relative;
}

page {
    background-color: whitesmoke;
}

.msgcell {
    height: 80px;
    margin-bottom: 3px;
    position: relative;
    border: 1px solid gainsboro;
    background-color: white;
    width: 95%;
    border-radius: 5px;
    margin-left: 7px;
}

.msgcell>image {
    height: 70px;
    width: 70px;
    margin-left: 9px;
    margin-top: 2px;
    border-radius: 50px;
}

.title {
    position: absolute;
    left: 90px;
    top: 9px;
    font-size: 16px;
}

.msg {
    position: absolute;
    left: 93px;
    top: 38px;
    font-size: 14px;
    color: rgb(158, 152, 152);
}

.tag {
    position: absolute;
    right: 20px;
    top: 28px;
}
.modal-title{
    color: black
}
.bg-img{
    width : 100%;
    height : 100%;
}

.weui-input{
    border: 1px solid gainsboro;
    height: 40px;
    width: 250px;
}
button{
    width: 120px
}
.add{
  display: inline-flex;
  width: 100%;
  border: none;
  background-color: white;
}
